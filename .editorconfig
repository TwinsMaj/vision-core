# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = tab
charset = utf-8
insert_final_newline = false
indent_style = 4
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
max_line_length = 100

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2